<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/geolocation_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Enter Location" />

    <Button
        android:id="@+id/attachLocationButton"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/UseGpsButton"
        android:text="Attach Location" />

    <Button
        android:id="@+id/UseGpsButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Location"
        android:layout_centerHorizontal="true"
        android:text="Use GPS?" />

</RelativeLayout>