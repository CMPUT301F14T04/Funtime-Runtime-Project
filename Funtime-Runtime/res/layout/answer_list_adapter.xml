<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/answer_reply_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/answerAdapterRating"
        android:layout_below="@+id/answer_textview"
        android:text="@string/answer_adapter_reply"
        android:textSize="12sp"
        android:textStyle="italic" />
    
    <Button
        android:id="@+id/answerAdapterRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/arrow_up_float"
        android:gravity="center"
        android:paddingRight="10dp"
        android:background="@android:color/transparent"
        android:text="100"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer_reply_textview"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/answer_author_textview"
        android:text="@string/question_adapter_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/answer_author_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_reply_textview"
        android:layout_toRightOf="@+id/answerAdapterRating"
        android:text="@string/question_adapter_author"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/answer_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_author_textview"
        android:layout_toRightOf="@+id/answerAdapterRating"
        android:text="@string/question_adapter_date"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/answer_view_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/answer_date"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:contentDescription="@string/view_photo_description"
        android:onClick="show_photo"
        android:src="@android:drawable/ic_menu_gallery" />

</RelativeLayout>