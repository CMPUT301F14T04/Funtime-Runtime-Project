<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QuestionPageActivity" >

    <!-- http://stackoverflow.com/questions/5289536/android-listview-default-divider-styles-attributes -->

    

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:onClick="addAnswer"
        android:text="@string/question_button_text" />

    <ListView
        android:id="@+id/answer_list"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_above="@+id/button_add_answer"
        android:layout_alignLeft="@+id/question_body_text"
        android:layout_below="@+id/question_favorite_button" >

    </ListView>

    <TextView
        android:id="@+id/question_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question_body_text"

        android:text="@string/question_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/question_body_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/question_title_text"
        android:layout_marginTop="26dp"
        android:text="@string/question_body"
        android:textSize="17sp" />

    <ImageButton
        android:id="@+id/question_favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/question_body_text"
        android:layout_below="@+id/question_body_text"
        android:background="@null"
        android:contentDescription="@string/star_action"
        android:src="@android:drawable/btn_star_big_off" 
        android:onClick="favorited"/>
    

    <Button
        android:id="@+id/button_add_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer_list"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/answer_list"
        android:text="@string/button_add_answer" />
    
        <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@+id/question_favorite_button"
         />
    

</RelativeLayout>