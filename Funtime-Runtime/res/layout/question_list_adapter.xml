<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/adapterStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/adapterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_toLeftOf="@+id/adapterStar"
        android:text="Title" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/adapterAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/adapterTitle"
        android:layout_below="@+id/adapterTitle"
        android:text="Answers: "
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/adapterRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/adapterDate"
        android:paddingRight="10dp"
        android:drawableTop="@drawable/arrow_up_float"
        android:gravity="center"
        android:text="0"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adapterAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/adapterAnswers"
        android:layout_below="@+id/adapterAnswers"
        android:text="Author: "
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/adapterDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/adapterAuthor"
        android:layout_below="@+id/adapterAuthor"
        android:text="Date: "
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/adapterLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapterDate"
        android:layout_toRightOf="@+id/adapterRating"
        android:text="Location: "
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>